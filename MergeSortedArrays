import java.util.Arrays;

public class MergeSortedArrays {
    
    public static void main(String[] args) {
        // Example arrays A and B
        int[] arrayA = {1, 3, 5, 7};
        int[] arrayB = {2, 4, 6, 8, 10};

        // Call the merge function
        int[] mergedArray = mergeSortedArrays(arrayA, arrayB);

        // Display the merged array
        System.out.println("Merged array in ascending order:");
        System.out.println(Arrays.toString(mergedArray));
    }

    // Function to merge two sorted arrays into a single sorted array
    public static int[] mergeSortedArrays(int[] arrayA, int[] arrayB) {
        int n = arrayA.length;
        int m = arrayB.length;
        int[] arrayC = new int[n + m];

        int i = 0, j = 0, k = 0;

        // Traverse both arrays and copy the smallest elements into arrayC
        while (i < n && j < m) {
            if (arrayA[i] <= arrayB[j]) {
                arrayC[k++] = arrayA[i++];
            } else {
                arrayC[k++] = arrayB[j++];
            }
        }

        // Copy remaining elements from arrayA if any
        while (i < n) {
            arrayC[k++] = arrayA[i++];
        }

        // Copy remaining elements from arrayB if any
        while (j < m) {
            arrayC[k++] = arrayB[j++];
        }

        return arrayC;
    }
}
